<% provide(:title, 'Events') %>
<h1>Events</h1>

<table>
  <thead>
    	<%= form_tag events_path, :method => 'get' do %>
    	<div class="search_form">
    	    <div id="search"><%= text_field_tag :search, params[:search] %>  </div>
    	  <div id="search_btn">
    	   <%= submit_tag 'Search' %>
    	  </div>
    	<% end %>


  </thead>

  <tbody>
	   
